<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myfstrong.mylistener.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_1st"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_2nd"
        android:layout_alignTop="@+id/btn_2nd"
        android:layout_alignLeft="@+id/txt_1st"
        android:layout_alignStart="@+id/txt_1st" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_3rd"
        android:layout_alignTop="@+id/btn_3rd"
        android:layout_alignLeft="@+id/txt_2nd"
        android:layout_alignStart="@+id/txt_2nd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_1st"
        android:layout_alignTop="@+id/txt_1st"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="72dp"
        android:layout_marginEnd="72dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_2nd"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btn_1st"
        android:layout_alignLeft="@+id/btn_1st"
        android:layout_alignStart="@+id/btn_1st" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_3rd"
        android:layout_below="@+id/btn_2nd"
        android:layout_alignLeft="@+id/btn_2nd"
        android:layout_alignStart="@+id/btn_2nd"
        android:layout_marginTop="27dp" />
</RelativeLayout>
